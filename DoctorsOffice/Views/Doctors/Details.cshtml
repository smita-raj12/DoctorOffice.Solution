    <li>@join.Specialty.Name
    @* @Html.ActionLink("Delete", "DeleteSpecialty", "Specialities", new { joinId = @join.SpecialtyDoctorId , DoctorId = Model.DoctorId }) *@
    </li>
  }
  </ul>
}
<p>@Html.ActionLink("Add a specilty", "AddSpecialty", new { id = Model.DoctorId })</p>
<p>@Html.ActionLink("Back to doctors", "Index")</p>
