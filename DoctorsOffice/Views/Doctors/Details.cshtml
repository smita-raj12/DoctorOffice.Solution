  }
  </ul>
}
@if(@Model.Specialties.Count == 0)
{
  <p>This Doctor does not have any specialties.</p>
}
else
{
  <h4>Assigned Specialties</h4>
  <ul>
  @foreach(var join in Model.Specialties)
