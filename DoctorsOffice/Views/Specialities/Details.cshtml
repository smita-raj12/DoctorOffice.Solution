@model DoctorsOffice.Models.Specialty;

<h2>Specialityies Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
@* <h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h3> *@

@if(@Model.JoinEntities.Count == 0)
{
  <p>This Speciality does not contain any Doctors</p>
}
else
{
  <h4>Doctors the Speciality has:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Doctor.Name</li>
  }
  </ul>
}
<p>@Html.ActionLink("Add a doctor", "AddDoctor", new { id = Model.SpecialtyId })</p>
<p>@Html.ActionLink("Back to Specialities", "Index")</p>
<p>@Html.ActionLink("Edit Speciality", "Edit", new { id = Model.SpecialtyId })</p>
<p>@Html.ActionLink("Delete Speciality", "Delete", new { id = Model.SpecialtyId })</p>