@using DoctorsOffice.Models;

<h1>Specialities</h1>

@if (@Model.Count == 0)
{
  <h3>No Specialities have been added yet!</h3>
} 

<ul>
  @foreach(Specialty speciality in Model)
  {
    <li>@Html.ActionLink($"{speciality.Name}", "Details", new { id = speciality.SpecialtyId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Specialty", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>